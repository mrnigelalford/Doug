# [START cloudbuild_npm_node]
steps:
# 1. Install dependencies
- name: node
  entrypoint: npm
  args: ['install']

# Run tests
# - name: node
#  entrypoint: npm
#  args: ['test']

# 2. Build the project
- name: node
  entrypoint: npm
  args: ['run', 'build']

# 3. deploy DOUG function
- name: 'gcr.io/google.com/cloudsdktool/cloud-sdk'
  args:
  - gcloud
  - functions
  - deploy
  - doug
  - --region=us-east1
  - --source=.
  - --trigger-http
  - --runtime=nodejs18
# [END cloudbuild_npm_node]
